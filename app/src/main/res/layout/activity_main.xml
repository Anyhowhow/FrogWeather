<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.wlhlearning.frogweather.MainActivity"
    android:background="@drawable/background_sunny"
    android:textAlignment="textStart">

    <Button
        android:text="设备不支持"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/humidity"
        android:background="@android:color/transparent"
        android:clickable="false"
        android:textSize="14sp"
        android:layout_alignBaseline="@+id/temperature"
        android:layout_alignBottom="@+id/temperature"
        android:layout_centerHorizontal="true"
        android:textColor="@android:color/background_light" />

    <Button
        android:text="正在获取数据"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/day_3_temperature"
        android:layout_above="@+id/button2"
        android:layout_alignStart="@+id/day_2_temperature"
        android:background="@android:color/transparent"
        android:textAlignment="textStart"
        android:textSize="14sp"
        android:textColor="@android:color/background_light" />

    <Button
        android:text="数据来源：中国气象局"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/button2"
        android:textSize="8sp"
        android:background="@android:color/transparent"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/button"
        android:textColor="@android:color/background_light" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/day_3"
        android:textSize="14sp"
        android:background="@android:color/transparent"
        android:textAlignment="textStart"
        android:layout_alignBaseline="@+id/day_3_temperature"
        android:layout_alignBottom="@+id/day_3_temperature"
        android:layout_alignStart="@+id/day_2"
        android:textColor="@android:color/background_light" />

    <Button
        android:text="明天"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/day_2"
        android:layout_toStartOf="@+id/day_2"
        android:id="@+id/button4"
        android:background="@android:color/transparent"
        android:textSize="14sp"
        android:textColor="@android:color/background_light" />

    <Button
        android:text="后天"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/button6"
        android:textSize="14sp"
        android:background="@android:color/transparent"
        android:layout_alignBaseline="@+id/day_3"
        android:layout_alignBottom="@+id/day_3"
        android:layout_alignParentStart="true"
        android:layout_toStartOf="@+id/day_3"
        android:textColor="@android:color/background_light" />

    <Button
        android:text="天气"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/weather"
        android:background="@android:color/transparent"
        android:clickable="false"
        android:textSize="36sp"
        android:layout_marginTop="30dp"
        android:layout_alignParentTop="true"
        android:layout_alignEnd="@+id/address"
        android:textColor="@android:color/background_light" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/day_2"
        android:background="@android:color/transparent"
        android:textSize="14sp"
        android:layout_marginBottom="11dp"
        android:textAlignment="textStart"
        android:layout_above="@+id/day_3"
        android:layout_toEndOf="@+id/button3"
        android:textColor="@android:color/background_light" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@android:color/transparent"
        android:id="@+id/imageButton1"
        android:background="@drawable/sunny"
        android:layout_marginTop="17dp"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/city" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@android:color/transparent"
        android:id="@+id/imageButton2"
        android:background="@drawable/sunny_s"
        android:layout_marginTop="8dp"
        android:layout_alignTop="@+id/day_1"
        android:layout_toStartOf="@+id/humidity" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@android:color/transparent"
        android:id="@+id/imageButton3"
        android:layout_alignTop="@+id/day_2"
        android:layout_alignStart="@+id/imageButton2"
        android:layout_marginTop="8dp"
        android:background="@drawable/sunny_s" />

    <Button
        android:text="成都市"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/city"
        android:background="@android:color/transparent"
        android:textSize="14sp"
        android:layout_marginStart="8dp"
        android:layout_alignTop="@+id/weather"
        android:layout_alignParentStart="true"
        android:textColor="@android:color/background_light" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/address"
        android:background="@android:color/transparent"
        android:clickable="false"
        android:textSize="14sp"
        tools:text="正在获取当前地址"
        android:textAlignment="textStart"
        android:textColor="@android:color/background_light"
        android:layout_alignBaseline="@+id/location"
        android:layout_alignBottom="@+id/location"
        android:layout_toEndOf="@+id/humidity" />

    <Button
        android:text="今天"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/button3"
        android:textSize="14sp"
        android:background="@android:color/transparent"
        android:textColor="@android:color/background_light"
        android:layout_alignBaseline="@+id/day_1"
        android:layout_alignBottom="@+id/day_1"
        android:layout_alignParentStart="true" />

    <Button
        android:text="温度"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/the_temperature"
        android:background="@android:color/transparent"
        android:textSize="18sp"
        android:textColor="@android:color/background_light"
        android:layout_below="@+id/weather"
        android:layout_alignStart="@+id/weather" />

    <Button
        android:text="数据来源：高德地图"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/button"
        android:textSize="8sp"
        android:background="@android:color/transparent"
        android:textColor="@android:color/background_light"
        android:layout_marginTop="11dp"
        android:layout_below="@+id/address"
        android:layout_alignStart="@+id/pressure" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/day_1"
        android:elevation="0dp"
        android:background="@android:color/transparent"
        android:clickable="false"
        android:textSize="14sp"
        android:textAlignment="textStart"
        android:layout_marginBottom="11dp"
        android:textColor="@android:color/background_light"
        android:layout_above="@+id/imageButton3"
        android:layout_toEndOf="@+id/button3" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/location"
        android:text="正在获取当前位置"
        android:background="@android:color/transparent"
        android:clickable="false"
        android:textSize="14sp"
        android:textAlignment="textStart"
        android:textColor="@android:color/background_light"
        android:layout_marginEnd="11dp"
        android:layout_centerVertical="true"
        android:layout_alignEnd="@+id/day_1" />

    <Button
        android:text="设备不支持"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/temperature"
        android:background="@android:color/transparent"
        android:clickable="false"
        android:textSize="14sp"
        android:layout_marginBottom="17dp"
        android:textColor="@android:color/background_light"
        android:layout_above="@+id/location"
        android:layout_alignParentStart="true" />

    <Button
        android:text="设备不支持"
        android:textAllCaps="false"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/pressure"
        android:background="@android:color/transparent"
        android:clickable="false"
        android:textSize="14sp"
        android:textColor="@android:color/background_light"
        android:layout_alignBaseline="@+id/humidity"
        android:layout_alignBottom="@+id/humidity"
        android:layout_alignParentEnd="true" />

    <Button
        android:text="更新时间"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/update_time"
        android:background="@android:color/transparent"
        android:textColor="@android:color/background_light"
        android:textSize="14sp"
        android:layout_below="@+id/city"
        android:layout_alignParentStart="true" />

    <EditText
        android:id="@+id/editText1"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imageButton1"
        android:layout_alignParentStart="true"
        android:layout_toStartOf="@+id/the_temperature"
        android:textColor="@android:color/background_light"
        android:textAlignment="center"
        android:hint="请输入城市名"
        android:textColorHint="@android:color/background_light"
        android:textSize="14sp" />

    <Button
        android:text="查询"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="13dp"
        android:id="@+id/searchweather"
        android:textColor="@android:color/background_light"
        android:background="@android:color/transparent"
        android:textSize="18sp"
        android:layout_alignTop="@+id/editText1"
        android:layout_alignParentEnd="true" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@android:color/transparent"
        android:id="@+id/imageButton4"
        android:background="@drawable/sunny_s"
        android:layout_below="@+id/day_2"
        android:layout_alignStart="@+id/imageButton3"
        android:layout_marginTop="8dp" />

    <Button
        android:text="正在获取数据"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/day_2_temperature"
        android:background="@android:color/transparent"
        android:textSize="14sp"
        android:textAlignment="textStart"
        android:textColor="@android:color/background_light"
        android:layout_alignBaseline="@+id/day_2"
        android:layout_alignBottom="@+id/day_2"
        android:layout_alignStart="@+id/day_1_temperature" />

    <Button
        android:text="正在获取数据"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/day_1_temperature"
        android:background="@android:color/transparent"
        android:textAlignment="textStart"
        android:textSize="14sp"
        android:textColor="@android:color/background_light"
        android:layout_alignBaseline="@+id/day_1"
        android:layout_alignBottom="@+id/day_1"
        android:layout_alignEnd="@+id/address" />

</RelativeLayout>
